<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="gameWorld.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/2d33046217.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"/>    
    <title>Game World</title>
</head>
<body>
    <section id="sitePresent">
        <div class="container-fluid">
            <!-- NAV -->
            <div class="navbar navbar-expand-lg">
                <div class="navbar-brand">Game World</div>
                <button type="button" id="btnBars" data-bs-toggle="offcanvas" data-bs-target="#sidebarFluid"><i class="fas fa-bars"></i></button>
                <div class="navbar-nav">
                    <li class="nav-item"><a href="#" class="nav-link">Community</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Bundle</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Item</a></li>
                    <form action="/search" method="post" class="searchGame">
                        <label for="searchGame"></label>
                        <input type="text" name="searchGame" placeholder="nom d'un jeu" required>
                        <button type="submit" id="btnSearch"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>

            <!-- CAROUSEL-->
            <div class="result mt-4" style="display: block; margin: auto;">
               <h2 style="color: azure; text-align: center">RÃ©sultats de la recherche pour "<%= game %>" :</h2>
                <div class="row">
                    <% results.forEach(result => { %>
                    <div class="col-lg-4 col-md-6 col-sm-12">
                        <div class="card m-4">
                            <div class="card-head">
                                <img src="<%= result.img %>" class="img-fluid w-100" style="height: 250px">
                            </div>
                            <div class="card-body">
                                <button type="button" id="btnInfo"><a href="<%= result.info %>">PLUS D'INFO</a></button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>

            <div class="typesGames">
                <div class="swiper mySwiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="card rpg">
                                <div class="card-head">
                                    <p class="types">RPG</p>
                                    <div class="plusMinus">
                                        <button type="button" class="btnPlus"><i class="far fa-plus-square"></i></button>
                                        <button type="button" class="btnMinus"><i class="far fa-minus-square"></i></button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="listGames">
                                        <div class="row">
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/rpg/Skyrim.jpeg" class="img-fluid w-100" height="200px" alt="Skyrim">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/rpg/fallout3.jpg" class="img-fluid w-100" height="200px" alt="Fallout 3">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/rpg/falloutNewVegas.jpg" class="img-fluid w-100" height="200px" alt="Fallout New Vegas">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/rpg/starfield.jpg" class="img-fluid w-100" height="200px" alt="Starfield">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles//src/typesGames/rpg/theOuterWorlds.jpg" class="img-fluid w-100" height="200px" alt="The Outer World">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/rpg/dragonAgeOrigins.jpg" class="img-fluid w-100" height="200px" alt="Dragon Age Origins">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="card jrpg">
                                <div class="card-head">
                                    <p class="types">JRPG</p>
                                    <div class="plusMinus">
                                        <button type="button" class="btnPlus"><i class="far fa-plus-square"></i></button>
                                        <button type="button" class="btnMinus"><i class="far fa-minus-square"></i></button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="listGames">
                                        <div class="row">
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/jrpg/yakuzaLikeADragon.jpg" class="img-fluid w-100" height="200px" alt="Yakuza Like A Dragon">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/jrpg/xenobladeChronicle3.jpg" class="img-fluid w-100" height="200px" alt="Xenoblade Chronicle 3">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/jrpg/persona5Royal.jpg" class="img-fluid w-100" height="200px" alt="Persona 5 Royal">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/jrpg/talesOfArise.jpg" class="img-fluid w-100" height="200px" alt="Tales Of Arise">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles//src/typesGames/jrpg/finalFantasyVII.jpg" class="img-fluid w-100" height="200px" alt="Final Fantasy VII Remake">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/jrpg/nierAutomata.jpg" class="img-fluid w-100" height="200px" alt="Nier Automata">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="card fps">
                                <div class="card-head">
                                    <p class="types">FPS</p>
                                    <div class="plusMinus">
                                        <button type="button" class="btnPlus"><i class="far fa-plus-square"></i></button>
                                        <button type="button" class="btnMinus"><i class="far fa-minus-square"></i></button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="listGames">
                                        <div class="row">
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/fps/borderlands2.jpg" class="img-fluid w-100" height="200px" alt="Borderlands 2">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/fps/farCry3.jpg" class="img-fluid w-100" height="200px" alt="Far Cry 3">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/fps/halfLife2.png" class="img-fluid w-100" height="200px" alt="Half Life 2">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/fps/doomEternal.jpg" class="img-fluid w-100" height="200px" alt="Doom Eternal">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles//src/typesGames/fps/wolfenstein2.jpg" class="img-fluid w-100" height="200px" alt="Wolfenstein 2">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/fps/dishonored2.jpg" class="img-fluid w-100" height="200px" alt="Dishonored 2">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="card story">
                                <div class="card-head">
                                    <p class="types">Riche en RÃ©cits</p>
                                    <div class="plusMinus">
                                        <button type="button" class="btnPlus"><i class="far fa-plus-square"></i></button>
                                        <button type="button" class="btnMinus"><i class="far fa-minus-square"></i></button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="listGames">
                                        <div class="row">
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/story/firewatch.jpg" class="img-fluid w-100" height="200px" alt="Firewatc">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/story/road96.jpg" class="img-fluid w-100" height="200px" alt="Road 96">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/story/lifeIsStrange.jpg" class="img-fluid w-100" height="200px" alt="Life is Strange Remastered">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/story/theWalkingDead.jpg" class="img-fluid w-100" height="200px" alt="The Walking Dead">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles//src/typesGames/story/immortality.jpg" class="img-fluid w-100" height="200px" alt="Immortality">
                                            </div>
                                            <div class="col-lg-2 games">
                                                <img src="./styles/src/typesGames/story/edithFinch.jpg" class="img-fluid w-100" height="200px" alt="Edith Finch">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                </div>
            </div>

            <div class="footer">
                <p class="foot">&copy;GameWorld</p>
                <div class="listSocial">
                    <li class="socialItem"><a href="#" class="socialLink"><i class="fa fa-facebook"></i></a></li>
                    <li class="socialItem"><a href="#" class="socialLink"><i class="fa fa-twitter"></i></a></li>
                    <li class="socialItem"><a href="#" class="socialLink"><i class="fa fa-youtube"></i></a></li>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="gameWorld.js"></script>
</body>
</html>